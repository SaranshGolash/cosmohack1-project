<%- include('partials/header', { title: 'Users - PhishGuard' }) %>
<%- include('partials/sidebar', { page: 'users' }) %>

<div class="main-content">
    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem;">
            <div style="display: flex; align-items: center;">
                <div style="font-size: 2rem; margin-right: 1rem;">ðŸ‘¥</div>
                <h1 style="margin: 0;">User Management</h1>
            </div>
            <a href="/users/new" class="btn btn-primary pulse">+ Add User</a>
        </div>

        <div class="glass-card sparkle">
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Group</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users && users.length > 0) { %>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.firstName %> <%= user.lastName %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.group || 'No Group' %></td>
                                    <td><span class="badge badge-active pulse">Active</span></td>
                                    <td>
                                        <a href="/users/<%= user.id %>/edit" class="btn btn-secondary" style="padding: 0.5rem;">Edit</a>
                                        <button onclick="deleteUser(<%= user.id %>)" class="btn btn-danger" style="padding: 0.5rem;">Delete</button>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" style="text-align: center; color: #aaa;">No users found. <a href="/users/new">Add your first user</a></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
function deleteUser(userId) {
    if (confirm('Are you sure you want to delete this user?')) {
        fetch(`/users/${userId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            } else {
                alert('Error deleting user');
            }
        });
    }
}
</script>

